{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "scp * lighthouse:/root/dev/huesy ; echo \"**********************`n* connecting via ssh *`n* running gcc        *`n**********************\"; ssh lighthouse \"cd ~/dev/huesy; gcc -g -o hues *.cpp -fdiagnostics-color=always -lwiringPi -lm\"",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
	/**
		"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "msbuild",
			"args": [
				// Ask msbuild to generate full paths for file names.
				"/property:GenerateFullPaths=true",
				"/t:build"
			],
			"group": "build",
			"presentation": {
				// Reveal the output only if unrecognized errors occur.
				"reveal": "silent"
			},
			// Use the standard MS compiler pattern to detect errors, warnings and infos
			"problemMatcher": "$msCompile"
		}
	]
	**/
}